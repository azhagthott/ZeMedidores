<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context="com.zecovery.android.zemedidores.views.assignments.fragments.forms.ResidentialFormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/polygonTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red_700"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/residential_form_warning"
                android:textColor="@color/white_google"
                android:textSize="24sp"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/fragment_residential_title"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:text="@string/residential_form_name"
                android:textColor="@color/gray_500" />

            <EditText
                android:id="@+id/residentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="@string/residential_form_name"
                android:inputType="text"
                android:maxLines="1"
                android:minLines="1"
                android:paddingEnd="4dp"
                android:paddingStart="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:text="@string/residential_form_rut"
                android:textColor="@color/gray_500" />

            <EditText
                android:id="@+id/residentRut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="@string/residential_form_rut"
                android:inputType="text"
                android:maxLines="1"
                android:minLines="1"
                android:paddingEnd="4dp"
                android:paddingStart="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:text="@string/residential_form_phone"
                android:textColor="@color/gray_500" />

            <EditText
                android:id="@+id/residentPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="@string/residential_form_phone"
                android:inputType="phone"
                android:paddingEnd="4dp"
                android:paddingStart="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:text="@string/residential_form_email"
                android:textColor="@color/gray_500" />

            <EditText
                android:id="@+id/residentEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="@string/residential_form_email"
                android:inputType="textEmailAddress"
                android:paddingEnd="4dp"
                android:paddingStart="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:text="@string/residential_form_date"
                android:textColor="@color/gray_500" />

            <EditText
                android:id="@+id/residentDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="@string/residential_form_date"
                android:inputType="datetime"
                android:paddingEnd="4dp"
                android:paddingStart="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="end">

            <Button
                android:id="@+id/saveButton"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/residential_form_save_button" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
